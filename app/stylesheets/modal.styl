.modalDialog
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  background rgba(0,0,0,0.8)
  z-index 99999
  opacity 0
  -webkit-transition opacity 400ms ease-in
  -moz-transition opacity 400ms ease-in
  transition opacity 400ms ease-in
  pointer-events none

  &.open
    opacity 1
    pointer-events auto

.modalDialogWindow
  width 30%
  position relative
  margin-top 40px
  margin-left auto
  margin-right auto
  margin-bottom 60px
  padding 5px 20px 13px 20px
  border solid black 1px
  background-color rgba(200,215,200,1)
  color black
  text-align center